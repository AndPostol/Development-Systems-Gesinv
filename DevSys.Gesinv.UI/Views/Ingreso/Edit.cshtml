@model DevSys.Gesinv.UI.Models.ViewModels.IngresoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Ingreso #@Model.IngresoId</h1>

<hr />
<div class="row justify-content-center">
    <div class="card col-7">
            <form asp-action="Edit">
            <div class="card-body gy-5" style="margin: 30px 0;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IngresoId" class="form-control" />
                    <div class="row row-cols-4">
                        <div class="form-group px-2">
                            <label asp-for="OrdenCompraId" class="control-label"></label>
                            <input readonly asp-for="OrdenCompraId" value="@Model.OrdenCompraId" class="form-control" />
                            <span asp-validation-for="OrdenCompraId" class="text-danger"></span>
                        </div>
                        <div class="form-group px-2">
                            <label asp-for="Fecha" class="control-label"></label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                    @*<Modificar por dropdowns>*@
                    <div class="form-group px-3 ">
                        <label asp-for="ProveedorId" class="control-label"></label>
                        <input asp-for="ProveedorId" class="form-control" />
                        <span asp-validation-for="ProveedorId" class="text-danger"></span>
                    </div>
                    <div class="form-group px-3">
                        <label asp-for="MotivoId" class="control-label"></label>
                        <input asp-for="MotivoId" class="form-control" />
                        <span asp-validation-for="MotivoId" class="text-danger"></span>
                    </div>

                    </div>
                    <div class="row row-cols-4">
                       
                        @*</Modificar por dropdowns>*@
                    </div>
                    <div class="row text-center justify-content-center">
                        <div class="col-10">
                            <table class="table table-bordered">
                            <thead class="dark-mode">
                                <tr>
                                    <th scope="col">Codigo</th>
                                    <th scope="col">Producto</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Precio Bruto</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for(int i = 0; i < Model.IngresoDetalle?.Count(); i++)
                                {

                                    <tr>
                                        <input type="hidden" asp-for="@Model.IngresoDetalle[i].IngresoDetalleId"  value="@Model.IngresoDetalle[i].IngresoDetalleId" />
                                        <input type="hidden" asp-for="@Model.IngresoDetalle[i].ProductoId"  value="@Model.IngresoDetalle[i].ProductoId" />
                                        <input type="hidden" asp-for="@Model.IngresoDetalle[i].IngresoId" value="@Model.IngresoDetalle[i].IngresoId"/>
                                        <input type="hidden" asp-for="@Model.IngresoDetalle[i].PrecioBruto" value="@Model.IngresoDetalle[i].PrecioBruto" />
                                        <input type="hidden" asp-for="@Model.IngresoDetalle[i].Fecha"  value="@Model.IngresoDetalle[i].Fecha" />
                                        <input type="hidden" asp-for="@Model.IngresoDetalle[i].Caja" value="@Model.IngresoDetalle[i].Caja" />
                                        <input type="hidden" asp-for="@Model.IngresoDetalle[i].Cantidad"  value="@Model.IngresoDetalle[i].Cantidad"/>

                                        <th scope="row">@Model.IngresoDetalle[i].ProductoId</th>
                                        <td>@Model.IngresoDetalle[i].ProductoNombre</td>
                                        <td>@Model.IngresoDetalle[i].Cantidad</td>
                                        <td>@Model.IngresoDetalle[i].PrecioBruto</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="form-group px-3 col-5">
                                <label asp-for="BodegaId" class="control-label"></label>
                                <input asp-for="BodegaId" class="form-control" />
                                <span asp-validation-for="BodegaId" class="text-danger"></span>
                            </div>
                        <div class="form-group px-3 col-5">
                                <label asp-for="TipoIngresoId" class="control-label"></label>
                                <input asp-for="TipoIngresoId" class="form-control" />
                                <span asp-validation-for="TipoIngresoId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Descuento" class="control-label"></label>
                                <input asp-for="Descuento" class="form-control" />
                                <span asp-validation-for="Descuento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Impuestos" class="control-label"></label>
                                <input asp-for="Impuestos" class="form-control" />
                                <span asp-validation-for="Impuestos" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Total" class="control-label"></label>
                                <input asp-for="Total" class="form-control" />
                                <span asp-validation-for="Total" class="text-danger"></span>
                            </div>
                        </div>
                    
                    </div>

            </div>     
            <div class="card-footer">
                <div class="row justify-content-between">
                    <div class="form-group">
                        <a class="btn btn-primary" asp-action="Index" asp-controller="Ingreso">Volver a la lista</a>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registrar" class="btn btn-primary" />
                    </div>  
                </div>
            </div>
        </form>
    </div>    
</div>  

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
