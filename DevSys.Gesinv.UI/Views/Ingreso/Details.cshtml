@model DevSys.Gesinv.UI.Models.ViewModels.IngresoViewModel

@{
    ViewData["Title"] = "Detalles de Ingreso";
}

<h1>Detalles del Ingreso #@Model.IngresoId</h1>

    <div class="row justify-content-center col-12">

        <div class="card col-7">
            <div class="card-body">

                <div class="row">
                    <div class="form-group col-3">
                        <label class="control-label">Tipo de Ingreso</label>
                        <p class="form-control">
                            @Model.TipoIngresoNombre
                        </p>
                    </div>
                    <div class="form-group col-3">
                        <label class="control-label">Bodega</label>
                        <p class="form-control">
                            @Model.BodegaNombre
                        </p>
                    </div>
                    <div class="form-group col-3">
                        <label class="control-label">Fecha</label>
                        <p class="form-control">
                            @Model.Fecha
                        </p>
                    </div>
                    <div class="form-group col-3">
                        <label class="control-label">Proveedor</label>
                        <p class="form-control">
                            @Model.ProveedorNombre
                        </p>
                    </div>
                </div>

                <div class="row">

                <table class="table table-striped table-bordered border-dark">
                        <thead>
                            <tr>
                                <th scope="col">Codigo</th>
                                <th scope="col">Producto</th>
                                <th scope="col">Fecha Ingreso</th>
                                <th scope="col">Cajas</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Costo Fab</th>
                                    
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.IngresoDetalle)
                            {
                                <tr>
                                    <td>@item.IngresoDetalleId</td>
                                    <td>@item.ProductoNombre</td>
                                    <td>@item.Fecha</td>
                                    <td>@item.Caja</td>
                                    <td>@item.Cantidad</td>
                                    <td>@item.PrecioBruto</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-7">

                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <label class="control-label">Descuento</label>
                            <p class="form-control">
                                @Model.Descuento
                            </p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Impuestos</label>
                            <p class="form-control">
                                @Model.Impuestos
                            </p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Total</label>
                            <p class="form-control">
                                @Model.Total
                            </p>
                        </div>
                    </div>                 
                </div>
            </div>

            <div class="card-footer">
                <div class="row justify-content-between">
                    <div class="form-group">
                        <a class="btn btn-primary" asp-action="Index" asp-controller="Ingreso">Volver a la lista</a>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Ingreso" asp-route-id="@Model.IngresoId"> Editar </a>
                    </div>
                </div>
                
            </div>
        </div>

    </div>
